          form(action="")#i-want-to-help.section.container.mdc-card(style="background: #818181")
            .mdc-text-field.mdc-text-field--outlined
              input#help-title.mdc-text-field__input(type='text')
              label.mdc-floating-label(for='tf-outlined') Message
              .mdc-notched-outline
                svg
                  path.mdc-notched-outline__path
              .mdc-notched-outline__idle
            .mdc-text-field.mdc-text-field--outlined
              input#help-donation-url.mdc-text-field__input(type='text')
              label.mdc-floating-label(for='tf-outlined') Donation Url
              .mdc-notched-outline
                svg
                  path.mdc-notched-outline__path
              .mdc-notched-outline__idle
            button(type="submit").mdc-button.mdc-button--raised(style="background: teal") get help       
    
    include includes/footer
